

input Users{
 
  id:String,
  username: String
  Phone: String
  email: String
  Password: String
}
type User{
 
  id:String,
  username: String
  Phone: String
  email: String
  Password: String
  token: String
}
input registerInput{
  username: String
  email : String
  Phone: String
  Password: String
}
input loginInput{
  email : String
  Password: String
}
type Query {
  userDetails: [User!]!
  getSingleUser(id:ID!): User
  
}

type Mutation {
  registerUser(registerInput:registerInput): User
  
  addUserDetails(users: Users!):User
  userDelete(id:String !): User
  updateUser(id: String!, user: Users!): User
  loginUser(loginInput:loginInput): User
} 