

input Employee {
 
 id:String,
  FirstName: String
  LastName: String
  Age: Int
  DateOfJoining: String
  Title:String 
  Department: String
  EmployeeType: String
  CurrentStatus: Boolean
}
type EmployeeDetails {
 
 id:String
  FirstName: String
  LastName: String
  Age: Int
  DateOfJoining: String
  Title:String
  Department: String
  EmployeeType: String
  CurrentStatus: Boolean
}
type Query {
  employeeDetails: [EmployeeDetails!]!
  getSingleEmployee(id:String): EmployeeDetails
}

type Mutation {
  addEmployeeDetails(employees: Employee!):EmployeeDetails
  employeeDelete(id:String !): EmployeeDetails
  updateEmployee(id: String!, employee: Employee!): EmployeeDetails
} 