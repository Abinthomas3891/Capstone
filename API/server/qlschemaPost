

input Post{
  Title:String,
  UserId:String,
  Desc: String,
  price: String,
  Type: String,
  Bed: String,
  Bath: String,
  parking: String,
  Location:String,
  image:String

}

type PostDetails{
  id:String,
  Title:String,
  UserId:String,
  Desc: String,
  price: String,
  Type: String,
  Bed: String,
  Bath: String,
  parking: String,
  Location:String,
  image:String
}
type Query {
  postDetails: [PostDetails!]!
  getSinglePost(id:String): PostDetails
  getPostByUser(UserId:String!): [PostDetails]
}

type Mutation {
  addPostDetails(posts: Post!):PostDetails
  PostDelete(id:String !): PostDetails
  updatePost(id: String!, post: Post!): PostDetails
  
} 